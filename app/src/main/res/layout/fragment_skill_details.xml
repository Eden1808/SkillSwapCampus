<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tvDetailsOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By: "
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvDetailsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: "
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvDetailsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnDeleteSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Skill" />

    <Button
        android:id="@+id/btnRequestSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Skill"
        android:layout_marginTop="16dp"/>


</LinearLayout>
