<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.skillswapcampus.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.skillswapcampus.RegisterFragment"
        android:label="Register">

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.skillswapcampus.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_requestsFragment"
            app:destination="@id/requestsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />


        <action
            android:id="@+id/action_homeFragment_to_addSkillFragment"
            app:destination="@id/addSkillFragment" />

        <action
            android:id="@+id/action_homeFragment_to_browseSkillsFragment"
            app:destination="@id/browseSkillsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_homeFragment_to_matchesFragment"
            app:destination="@id/matchesFragment" />

    </fragment>


    <fragment
        android:id="@+id/addSkillFragment"
        android:name="com.example.skillswapcampus.AddSkillFragment"
        android:label="Add Skill">

        <action
            android:id="@+id/action_addSkillFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


    <fragment
        android:id="@+id/browseSkillsFragment"
        android:name="com.example.skillswapcampus.BrowseSkillsFragment"
        android:label="Browse Skills">

        <action
            android:id="@+id/action_browseSkillsFragment_to_skillDetailsFragment"
            app:destination="@id/skillDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.skillswapcampus.ProfileFragment"
        android:label="Profile">

        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_profileFragment_to_skillDetailsFragment"
            app:destination="@id/skillDetailsFragment" />

        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />


    </fragment>



    <fragment
        android:id="@+id/skillDetailsFragment"
        android:name="com.example.skillswapcampus.SkillDetailsFragment"
        android:label="Skill Details" />

    <fragment
        android:id="@+id/requestsFragment"
        android:name="com.example.skillswapcampus.RequestsFragment"
        android:label="Requests" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.skillswapcampus.EditProfileFragment"
        android:label="Edit Profile" />

    <fragment
        android:id="@+id/matchesFragment"
        android:name="com.example.skillswapcampus.MatchesFragment"
        android:label="Matches" />

</navigation>
